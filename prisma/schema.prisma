generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Album {
  id          String   @id
  title       String
  description String
  release     DateTime
  colors      String[]
  musics      Music[]
}

enum CategoryType {
  PROGRAM
  REALITY
  OTHERS
}

model Category {
  id          String       @id
  title       String
  description String?
  type        CategoryType
  order       Int
}

enum VideoSource {
  YOUTUBE
}

model Video {
  id       String      @id
  title    String
  source   VideoSource
  sourceId String
  date     DateTime
  duration Int
  meta     Json
}

model Music {
  id         String  @id
  title      String
  shortTitle String
  order      Int
  albumId    String?
  album      Album?  @relation(fields: [albumId], references: [id])
}
