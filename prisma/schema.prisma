generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Album {
  id          String   @id
  title       String
  description String
  release     DateTime
  colors      String[]
}

enum CategoryType {
  PROGRAM
  REALITY
  OTHERS
}

model Category {
  id          String       @id
  title       String
  description String?
  type        CategoryType
  order       Int
}
