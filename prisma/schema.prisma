generator client {
  provider = "prisma-client-js"
}

generator json {
  provider  = "prisma-json-types-generator"
  namespace = "PrismaJson"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Album {
  id          String   @id
  title       String
  description String
  release     DateTime
  colors      String[]
  musics      Music[]
  isMini      Boolean
}

enum CategoryType {
  PROGRAM
  REALITY
  OTHERS
}

model Category {
  id          String       @id
  title       String
  description String?
  type        CategoryType
  order       Int
  videos      Video[]
}

enum VideoSource {
  YOUTUBE
}

model Video {
  id         String      @id
  title      String
  source     VideoSource
  sourceId   String
  date       DateTime
  categories Category[]

  /// [VideoMeta]
  meta Json[]
}

model Music {
  id         String  @id
  title      String
  shortTitle String
  order      Int
  albumId    String?
  album      Album?  @relation(fields: [albumId], references: [id])
}

enum StageType {
  SHOWCASE
  FANSIGN
  PROGRAM
}

model Stage {
  id    String    @id
  type  StageType
  title String
  date  DateTime
  order Int
}
